<%= form_with(model: column, local: true) do |form| %>
  <% if column.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(column.errors.count, "error") %> prohibited this column from being saved:</h2>

      <ul>
      <% column.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, [ "Residential", "Commercial", "Corporate", "Hybrid" ] %>
  </div>

  <div class="field">
    <%= form.label :number_of_floors_served %>
    <%= form.number_field :number_of_floors_served %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, [ "Active", "Inactive", "Intervention" ] %>
  </div>

  <div class="field">
    <%= form.label :information %>
    <%= form.text_area :information %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
